@{
    ViewBag.Title = "Iniciar Sesión";
}

<div class="container">
    <h2 class="text-center text-primary my-5">Inicio de Sesión</h2>

    <div class="card p-4 shadow">
        @using (Html.BeginForm("LoginUsuario", "Usuario", FormMethod.Post))
        {
            <div class="form-group mb-3">
                <label class="text-primary">Nombre</label>
                @Html.TextBox("nombre", "", new { @class = "form-control", placeholder = "Ingrese su nombre" })
            </div>

            <div class="form-group mb-3">
                <label class="text-primary">Contraseña</label>
                @Html.Password("password", "", new { @class = "form-control", placeholder = "Ingrese su contraseña" })
            </div>

            <div class="form-group text-center mt-4">
                <input type="submit" class="btn btn-primary w-50" value="Iniciar Sesión" />
            </div>
        }

        <div class="text-center mt-3">
            <p>¿No tienes cuenta?</p>
            <a asp-controller="Usuario" asp-action="Registrarse" class="btn btn-outline-primary">Registrarse</a>
        </div>
    </div>
</div>
