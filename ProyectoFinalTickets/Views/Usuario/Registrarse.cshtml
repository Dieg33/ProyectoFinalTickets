@model TuProyecto.Models.Usuario

@{
    ViewBag.Title = "Crear usuario";
}

<div class="bg-dark my-5 py-5">
    <h3 class="text-light text-center my-5 py-5">Registro de Usuario</h3>
</div>

<div class="container">
    <h2>Formulario de registro</h2>
    <h5>Datos del usuario</h5>
</div>

<div class="container my-5">
    @using (Html.BeginForm("UsuariosRegistrarse", "Usuario", FormMethod.Post))
    {
        <div class="form-group row mb-4">
            <div class="col-sm-6">
                <label>Nombre</label>
                @Html.TextBoxFor(model => model.nombre, new { @class = "form-control" })
            </div>
            <div class="col-sm-6">
                <label>Apellidos</label>
                @Html.TextBoxFor(model => model.apellidos, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group row my-4">
            <label>Empresa</label>
            @Html.TextBoxFor(model => model.empresa, new { @class = "form-control" })
        </div>

        <div class="form-group row my-4">
            <label>Correo</label>
            @Html.TextBoxFor(model => model.correo, new { @class = "form-control", type = "email" })
        </div>

        <div class="form-group row mt-2">
            <input type="submit" class="btn btn-success" value="Registrar Usuario" />
        </div>
    }
</div>

