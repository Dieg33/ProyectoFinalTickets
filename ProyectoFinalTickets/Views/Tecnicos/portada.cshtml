@{
    ViewBag.Title = "Bienvenido al Portal del Técnico";
}

<style>
    body {
        margin: 0;
        font-family: Arial, sans-serif;
        background-color: #f2f4f8;
    }

    .sidebar {
        width: 200px;
        height: 100vh;
        position: fixed;
        background-color: #2c3e50;
        color: white;
        padding-top: 30px;
    }

        .sidebar a {
            display: block;
            color: white;
            padding: 15px 20px;
            text-decoration: none;
            font-size: 16px;
        }

            .sidebar a:hover {
                background-color: #34495e;
            }

    .main-content {
        margin-left: 200px;
        padding: 40px;
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .btn-primary {
        background-color: #1e87f0;
        color: white;
        padding: 10px 18px;
        text-decoration: none;
        border-radius: 4px;
        font-weight: bold;
    }

        .btn-primary:hover {
            background-color: #0f7ae5;
        }

    .dashboard {
        display: flex;
        gap: 20px;
        margin-top: 40px;
        flex-wrap: wrap;
    }

    .card {
        background-color: white;
        border-radius: 8px;
        padding: 30px;
        text-align: center;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        flex: 1;
        min-width: 200px;
        cursor: pointer;
        transition: transform 0.2s;
    }

        .card:hover {
            transform: scale(1.03);
        }

    .card-icon {
        font-size: 40px;
        margin-bottom: 15px;
        color: #1e87f0;
    }

    .logout {
        margin-top: 50px;
        text-align: center;
    }

    .btn-danger {
        background-color: #e74c3c;
        color: white;
        padding: 10px 18px;
        text-decoration: none;
        border-radius: 4px;
        font-weight: bold;
    }

        .btn-danger:hover {
            background-color: #c0392b;
        }
</style>

<div class="sidebar">
    <a href="#">Tickets</a>
    <a href="#">Comentario</a>
    <a href="#"> Estados</a>
</div>

<div class="main-content">
    <div class="header">
        <h2>👨‍🔧 Portal del Técnico</h2>
    </div>

    <div class="dashboard">
        <div class="card" onclick="location.href='@Url.Action("ticketAsignado", "Tecnicos")'">
            <div class="card-icon">📋</div>
            <div>Ver Tickets Asignados</div>
        </div>

        <div class="card" onclick="location.href='@Url.Action("comentarios", "Tecnicos")'">
            <div class="card-icon">💬</div>
            <div>Comentarios</div>
        </div>
    </div>

    <div class="logout">
        <a asp-controller="Usuario" asp-action="Logout" class="btn-danger">Cerrar Sesión</a>
    </div>
</div>
